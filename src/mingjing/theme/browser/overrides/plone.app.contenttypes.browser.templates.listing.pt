<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">

  <div metal:define-macro="text-field-view"
      id="parent-fieldname-text" class="stx"
      tal:define="text view/text"
      tal:condition="text"
      tal:attributes="class view/text_class">
    <div metal:define-slot="inside" tal:replace="structure text">The body</div>
  </div>



<?python
from plone import api
portal = api.portal.get()
LIMIT = 10
hot_news = api.content.find(context=context, depth=1, featured=True, sort_on='created', sort_order='reverse', sort_limit=LIMIT)[:LIMIT]
?>
    <div class="row">
        <div class="col-lg-6 col-md-12" tal:define="items hot_news">
            <h3 class="category-title">
                <span>焦點話題</span>
                <a href="javascript:void(0)" class="h3-title-more">更多</a>
            </h3>
            <metal:macro use-macro="context/@@mingjing_macro/macros/normal_slider" />
        </div>
        <div class="col-lg-6 col-md-12" tal:define="items hot_news">
            <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
        </div>
    </div>


  <h3 class="category-title"><span>最新內容</span></h3>
  <metal:listingmacro define-macro="listing">
    <tal:results define="batch view/batch">
      <tal:listing condition="batch">
        <div class="entries" metal:define-slot="entries">
          <tal:repeat repeat="item batch" metal:define-macro="entries">
            <tal:block tal:define="obj item/getObject;
                item_url item/getURL;
                item_id item/getId;
                item_title item/Title;
                item_description item/Description;
                item_type item/PortalType;
                item_modified item/ModificationDate;
                item_created item/CreationDate;
                item_type_class python:'contenttype-' + view.normalizeString(item_type);
                item_wf_state item/review_state;
                item_wf_state_class python:'state-' + view.normalizeString(item_wf_state);
                item_creator item/Creator;
                item_link python:item_type in view.use_view_action and item_url+'/view' or item_url;                
                item_is_event python:view.is_event(obj);
                item_has_image python:item.getIcon">
              <metal:block define-slot="entry">

<div class="row listing-view">

<?python
from plone import api
?>

              <div class="col-md-12" tal:condition="python:api.content.get_state(obj=item.getObject(), default=False)">
                <div class="entry category-block articles row">
                    <div class="summary col-md-3" tal:attributes="title item_type">
                      <a tal:attributes="href item_link">
                          <div class="image image-listing250">
                                    <img tal:condition="python:not item.getObject().oldPicturePath"
                                         tal:attributes="src string:${portal/absolute_url}/resource/images/logo_gray.png/@@images/image/mini;
                                                         alt item_title">
                                    <img tal:condition="python:item.getObject().oldPicturePath" class="image-tile" alt="${item_title}"
                                         tal:attributes="src string:${python:item.getObject().oldPicturePath}">
                          </div>
                      </a>
                    </div>

                    <div class="col-md-9">
                    <h4>
                     <a tal:attributes="href item_link;
                                        class string:$item_type_class $item_wf_state_class url;
                                        title item_type"
                         tal:content="item_title"></a>
                    </h4>


                    <metal:block metal:define-macro="document_byline">
                      <div class="documentByLine">
                        <tal:event condition="item_is_event">
                          <tal:date tal:replace="structure python:view.formatted_date(obj)"/>
                          <span tal:condition="item/location" i18n:translate="label_event_byline_location">&mdash;
                            <span tal:content="string:${item/location}" class="location" i18n:name="location">Oslo</span>,
                          </span>
                        </tal:event>
                        <tal:byline condition="view/show_about">
                          &mdash;
                          <tal:name tal:condition="item_creator"
                              tal:define="author python:view.pas_member.info(item_creator);
                                          creator_short_form author/username;
                                          creator_long_form string:?author=${author/username};
                                          creator_is_openid python:'/' in creator_short_form;
                                          creator_id python:(creator_short_form, creator_long_form)[creator_is_openid];">
                          <span i18n:translate="label_by_author">
                            by
                            <a tal:attributes="href string:${view/navigation_root_url}/author/${item_creator}"
                                tal:content="author/name_or_id"
                                tal:omit-tag="not:author"
                                i18n:name="author">
                              Bob Dobalina
                            </a>
                          </span>
                          </tal:name>

                          <tal:modified condition="python: item_type != 'Event'">
                            &mdash;
                            <tal:mod i18n:translate="box_last_modified">last modified</tal:mod>
                            <span tal:replace="python:view.toLocalizedTime(item_modified,long_format=1)">
                              August 16, 2001 at 23:35:59
                            </span>
                          </tal:modified>

                          <metal:description define-slot="description_slot">
                            <tal:comment replace="nothing">
                              Place custom listing info for custom types here
                            </tal:comment>
                          </metal:description>
                        </tal:byline>

                      </div>
                    </metal:block>
                      <p tal:condition="item_description"
                         tal:content="python:item_description[0:240]">
                        description
                      </p>

                    </div>
                  </div>

              </div>
</div>

<!-- Ad block -->
        <div class="row" tal:condition="python:repeat['item'].number == 10">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>

              </metal:block>
            </tal:block>
          </tal:repeat>
        </div>

        <div metal:use-macro="context/batch_macros/macros/navigation" />

<!-- Ad block -->
        <div class="row">
            <div class="col-sm-12 mv3 mvt0">
                <metal:macro use-macro="context/@@mingjing_macro/macros/ad_block"/>
            </div>
        </div>

      </tal:listing>

      <metal:empty metal:define-slot="no_items_in_listing">
        <p class="discreet"
            tal:condition="not: view/batch"
            tal:content="view/no_items_message">
          There are currently no items in this folder.
        </p>
      </metal:empty>

    </tal:results>
  </metal:listingmacro>

</metal:block>
</metal:content-core>

</body>
</html>
